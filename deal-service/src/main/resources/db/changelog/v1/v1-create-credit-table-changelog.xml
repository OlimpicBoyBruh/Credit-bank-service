<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-2" author="Artem Meshcheryakov">
        <createTable tableName="credit">
            <column name="credit_id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="amount" type="numeric(38,2)"/>
            <column name="psk" type="numeric(38,2)"/>
            <column name="rate" type="numeric(38,2)"/>
            <column name="term" type="integer"/>
            <column name="is_insurance_enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="is_salary_client" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="numeric(38,2)"/>
            <column name="credit_status" type="varchar(50)">
                <constraints checkConstraint="credit_status IN ('CALCULATED', 'ISSUED')"/>
            </column>
            <column name="payment_schedule" type="jsonb"/>
        </createTable>
        <rollback>
            <dropTable tableName="credit"/>
        </rollback>
    </changeSet>

</databaseChangeLog>