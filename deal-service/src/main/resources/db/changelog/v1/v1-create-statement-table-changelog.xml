<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-3" author="Artem Meshcheryakov">

        <createTable tableName="statement">
            <column name="statement_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="applied_offer" type="jsonb"/>
            <column name="status" type="varchar(255)"/>
            <column name="status_history" type="jsonb"/>
            <column name="creation_date" type="timestamp(6)"/>
            <column name="client_id" type="uuid">
                <constraints unique="true"/>
            </column>
            <column name="credit_id" type="uuid">
                <constraints unique="true"/>
            </column>
            <column name="sign_date" type="timestamp(6)"/>
            <column name="ses_code" type="varchar(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="statement"/>
        </rollback>
    </changeSet>

    <changeSet id="addForeignKeyCreditId" author="Artem Meshcheryakov">
        <addForeignKeyConstraint baseTableName="statement" baseColumnNames="credit_id"
                                 constraintName="FK_credit_id" referencedTableName="credit"
                                 referencedColumnNames="credit_id" onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="addForeignKeyClientId" author="Artem Meshcheryakov">
        <addForeignKeyConstraint baseTableName="statement" baseColumnNames="client_id"
                                 constraintName="FK_client_id" referencedTableName="client"
                                 referencedColumnNames="client_id" onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>